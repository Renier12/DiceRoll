<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dice_roll.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="40">          

            <Label
                Text="Welcome to Dice roll!"
                VerticalOptions="Center"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="This appliocation was made as an excercise. This application will generate random nubers. Range of numbers is dependent on the size of dice selected. The percentage result of the dice roll is aslo calculated and displayed for your convenience"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dice_roll.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="40">          
            
            <Label
                Text="This application will generate random dice rolls. Range of numbers is dependent on the size of dice selected. Multiple dice can be selected for a variety of games. The sum of the dice is calculated and displayed. The D10 is not included in the sum. A percentage is diaplayed for the D10 roll." />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
